@model SymViewModel.GF.EmployeeSettlementVM
@using UIHelper.MVC
<div class="GFPolicy">
    <div class="row">
        <div class="col-md-3">
            <div class="editor-label" style="white-space: pre-line">
                @Html.Label("", "Policy Name")
            </div>
        </div>
        <div class="col-md-2">
            <div class="editor-label" style="white-space: pre-line">
                @Html.Label("", "Job Year From")
            </div>
        </div>
        <div class="col-md-2">
            <div class="editor-label" style="white-space: pre-line">
                @Html.Label("", "Job Year To")
            </div>
        </div>
        <div class="col-md-2">
            <div class="editor-label" style="white-space: pre-line">
                @Html.Label("", "Multipication Factor")
            </div>
        </div>
        <div class="col-md-1">
            <div class="editor-label" style="white-space: pre-line">
                @Html.Label("", "Fixed")
            </div>
        </div>
        <div class="col-md-2">
            <div class="editor-label" style="white-space: pre-line">
                @Html.Label("", "Last Basic Multipication")
            </div>
        </div>
    </div>
    @for (int i = 0; i < Model.gfPolicyVMs.Count; i++)
    {
        <div class="row">
            <div class="col-md-3">
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.gfPolicyVMs[i].PolicyName, new { @class = " form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="col-md-2">
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.gfPolicyVMs[i].JobDurationYearFrom, new { @class = " form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="col-md-2">
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.gfPolicyVMs[i].JobDurationYearTo, new { @class = " form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="col-md-2">
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.gfPolicyVMs[i].MultipicationFactor, new { @class = " form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="col-md-1">
                <div class="editor-field">
                    @Html.CheckBoxFor(model => model.gfPolicyVMs[i].IsFixed, new { @class = " form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="col-md-2">
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.gfPolicyVMs[i].LastBasicMultipication, new { @class = " form-control", @readonly = "readonly" })
                </div>
            </div>
        </div>
        //PolicyName       
        //JobDurationYearFrom
        //JobDurationYearTo
        //MultipicationFactor                
        //IsFixed
        //LastBasicMultipication                
        //Remarks
    }
</div>
