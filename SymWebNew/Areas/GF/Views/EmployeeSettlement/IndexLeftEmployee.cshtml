<script language="javascript" type="text/javascript">
    $(function () {
        customToollip();
        InitDateTimePickers();
        $.datepicker.regional[""].dateFormat = 'dd/M/y';
        $.datepicker.setDefaults($.datepicker.regional['']);
        var oTable = $('#myDataTable').dataTable({
            "bServerSide": true,
            "sAjaxSource": "/GF/EmployeeSettlement/_indexLeftEmployee",
            "bProcessing": true,
            "aLengthMenu": tablelength(),
            "bJqueryUI": true,
            "bAutoWidth": false,
            "aoColumns": [
                            {
                                "sName": "Id",
                                "bSearchable": false,
                                "bSortable": false,
                                "sWidth": "12%",
                                "sClass": "center",
                                "fnRender": function (oObj) {
                                    return '  <a title="Click on for Details" style="text-decoration:none;"    href=\"/GF/EmployeeSettlement/Create?EmployeeId=' + oObj.aData[0] + '\"  class="sym-btn-detail-row"></a>';
                                }
                            }
                            , { "sName": "Code", "sWidth": "8%" }
                            , { "sName": "EmpName", "sWidth": "12%" }
                            , { "sName": "Designation", "sWidth": "12%" }
                            , { "sName": "Department ", "sWidth": "10%" }
                            , { "sName": "JoinDate", "sWidth": "18%" }
                            , { "sName": "LeftDate", "sWidth": "18%" }
                            , { "sName": "TotalJobDurationYear", "sWidth": "8%" }
            ]
        });


        oTable.columnFilter
            ({
                sPlaceHolder: "head:after",
                aoColumns:
                    [
                        { type: "checkbox", "sClass": "chkAll" }
                        , { type: "text" }
                        , { type: "text" }
                        , { type: "text" }
                        , { type: "text" }
                        , { type: "date-range" }
                        , { type: "date-range" }

                    ]
            });
    });

