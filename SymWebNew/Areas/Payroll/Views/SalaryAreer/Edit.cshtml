                             return ' <input onclick="CheckAll(this)" type="checkbox" data-Id="' + oObj.aData[0] + '">&nbsp; <a title="Click on for Edit" style="text-decoration:none;" Onclick="AreerEdit(this);" id="lnkEdit1" class=" sym-btn-edit-row"  data-Id="' + oObj.aData[0] + '"></a>' +
                             '&nbsp; <a title="Click on for Delete" style="text-decoration:none;" data-url="/Payroll/SalaryAreer/SalaryAreerDetailsDelete" onclick="deletedData(this, myDataTable,' + oObj.aData[0] + ');"  class="sym-btn-remove-row"></a>';

                                 //'&nbsp; <a title="Click on for Edit" style="text-decoration:none;" data-url="/Payroll/Loan/LoanDelete" onclick="deletedData(this, myDataTable,' + oObj.aData[0] + ');"  class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-trash"></i></a>';
                         }
                     }
