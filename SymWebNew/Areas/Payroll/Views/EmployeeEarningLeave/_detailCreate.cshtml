<script>
    $(function () {
        InitDropDowns();
        checkvalue();
        //$('#empId').val('@Model.Code~@Model.EmpName');

        if ('@Model.Code' == null || '@Model.Code' == "") {
            $('#empId').val("");
        }
        else {
            setTimeout(function () { $(".selectDropdown").val('@Model.Code').trigger('change'); }, 200);
        }

    });
    $('#DeleteJSON').click(function () {
        var myData = $('#afrmEmployeeEdit').serialize();
        var url = "/Payroll/EmployeeEarningLeave/Create?btn=delete";
        submit(url, myData);
        $('.DeductionAmount').val('0');

    })
    function checkvalue() {
        var EarningAmount = $(".DeductionAmount").val();
        if (EarningAmount == 0) {
            $("#SaveJSON").show();
            $("#UpdateJSON").hide();
        }
        else {
            $("#SaveJSON").hide();
            $("#UpdateJSON").show();
        }
    }
    $('#SaveJSON,#UpdateJSON').click(function () {
        var FiscalYearDetailId = $('#FiscalYearDetailId').val();

        if (FiscalYearDetailId == "") {
            ShowResult('Fail', "Please Select Fiscal year");
            return;
        }

        var SalaryPreiodId = $('.cSalaryPreiodId').val();

        if (SalaryPreiodId == "" || SalaryPreiodId == "0") {
            ShowResult('Fail', "Please Select Salary Fiscal year");
            return;
        }


        var url = "/Common/FiscalYear/FiscalPeriodLockCheck?FiscalYearDetailId=" + FiscalYearDetailId;

        $.ajax({
            url: url
               , type: 'Post'
               , traditional: true
               , beforeSend: function () { $(".loading").show(); }
               , success: SaveUpdateData
            , complete: function () { $(".loading").fadeOut(200).hide("slow") }
        });

    });

    function SaveUpdateData(result) {

        var results = result.split("~");

        if (results[0].toLowerCase() == 'true') {

            ShowResult("Fail", results[1]);

        }
        else {

            var SalaryPreiodId = $('.cSalaryPreiodId').val();

            //alert(SalaryPreiodId);

            //if (SalaryPreiodId == "") {
            //    ShowResult('Fail', "Please Select Salary Fiscal year");
                
            //}
            //else {

                //var url = "/Common/FiscalYear/FiscalPeriodLockCheck?FiscalYearDetailId=" + SalaryPreiodId;

                //$.ajax({
                //    url: url
                //       , type: 'Post'
                //       , traditional: true
                //       , beforeSend: function () { $(".loading").show(); }
                //       , success: EarningLeaveSaveUpdateData
                //    , complete: function () { $(".loading").fadeOut(200).hide("slow") }
                //});

            //}
           
            EarningLeaveSaveUpdateData("false~", SalaryPreiodId)
        }

    }

    function EarningLeaveSaveUpdateData(result, SalaryPeriodId) {

        var results = result.split("~");

        if (results[0].toLowerCase() == 'true') {

            ShowResult("Fail", "This Salary Fiscal Period is Locked");

        }
        else {

            var DeductionTypeId = $('.dType').val();
            var Code = $('#Code').val();
            if (Code == "") {
                ShowResult("Fail", "Please Select Code!");
                return;
            }
            if (DeductionTypeId == "") {
                ShowResult("Fail", "Please Select Salary Period!");
                return;
            }
            if (FiscalYearDetailId == "") {
                ShowResult("Fail", "Please Select Fiscal Year!");
                return;
            }
            var myData = $('#afrmEmployeeEdit').serialize();

            myData += "&SalaryPeriodId=" + SalaryPeriodId;

            var url = "/Payroll/EmployeeEarningLeave/Create?btn=save";
            submit(url, myData);
        }

    }




</script>

