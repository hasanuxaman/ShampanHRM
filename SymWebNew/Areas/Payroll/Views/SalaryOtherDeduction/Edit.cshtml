    ViewBag.Title = "Edit";
}
<div class="headrow">
 <label class="pull-right">Salary Other Deduction > Employee </label>
</div>
<div class="thinbox"> 
            <div class="th_thinbox">
        <p>@ViewBag.periodName</p>
    </div>
    <p>
    </p>
                    <div  id="container">
                <table id="myDataTable" class="display">
                    <thead>
                        <tr>
                            <th class="center">Select All </th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Deduction Type</th>
                            <th>Deduction Amount</th>
                            <th>Basic</th>
                            <th>Gross</th>
                        </tr>
                        <tr>
                            <th class="center">Actions</th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Deduction Type</th>
                            <th style="text-align:left!important">Deduction Amount</th>
                            <th style="text-align:left!important">Basic</th>
                            <th style="text-align:left!important">Gross</th>
                        </tr>
                    </thead>
                    <tbody> 
                    </tbody>
                </table>
        </div>
    <br />
</div>
<script>
        $(function () {
            SelectAllForDelete();
            var oTable = $('#myDataTable').dataTable({
                "bServerSide": true,
                "sAjaxSource": "/Payroll/SalaryOtherDeduction/_SalaryOtherDeductionDetails?FID=@ViewBag.Id",
                "bProcessing": true,
                "aLengthMenu": tablelength(),
                "bJqueryUI": true,
                "bAutoWidth": false,
                "aoColumns": [
                     {
                         "sName": "Id",
                         "bSearchable": false,
                         "bSortable": false,
                         "sWidth": "12%",
                         "sClass": "center",
                         "fnRender": function (oObj) {
                             return '<a title="Click on for Details" id="lnkEdit1" style="text-decoration:none;" Onclick="Edit(this);"  class=" sym-btn-detail-row"  data-Id="' + oObj.aData[0] + '"></a>'
                             ;

                             //' <input onclick="CheckAll(this)" type="checkbox" data-Id="' + oObj.aData[0] + '">&nbsp;'
                             //   +
                                 //+ '&nbsp; <a title="Click on for Delete" style="text-decoration:none;" data-url="/Payroll/SalaryOtherDeduction/Delete" onclick="deletedData(this, myDataTable,' + oObj.aData[0] + ');"  class="sym-btn-remove-row"></a>';
                         }
                     }
                                , { "sName": "Code", "sWidth": "8%" }
                                , { "sName": "Name", "sWidth": "15%" }
                                , { "sName": "DeductionType", "sWidth": "15%" }
                                , { "sName": "DeductionAmount", "sClass": "right", "sWidth": "16%" }
                                , { "sName": "Basic", "sClass": "right", "sWidth": "16%" }
                                , { "sName": "Gross", "sClass": "right", "sWidth": "16%" }
                ]
            });
            oTable.columnFilter({
                sPlaceHolder: "head:after",
                aoColumns: [{ type: "checkbox", "sClass": "chkAll" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "number-range" }
                           , { type: "number-range" }
                           , { type: "number-range" }
                ]

            });
        });
    function Edit(sender) {
        window.location = "/Payroll/SalaryOtherDeduction/SingleSalaryOtherDeductionEdit?soeId=" + $(sender).attr('data-Id');
    }
</script>

