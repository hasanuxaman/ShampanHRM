@model SymViewModel.HRM.EmployeeInfoVM
<div class="row">
    <div class="col-md-4">
        <div class="thinbox">
            <div class="th_thinbox">
                <p>Salary Earning(Past)</p>
            </div>
            <div class="row past">
                @foreach (var item in Model.EmployeeSalaryStructureVMs)
                { 
                   
                    <div class="editor-label col-md-6">
                        <h3>@Html.ValueFor(model => item.SalaryType)</h3>
                    </div>
                    <div class="editor-field col-md-6">
                        @Html.TextBoxFor(model => item.TotalValue, new { @disabled = "disabled", @placeholder = "TotalValue", @class = " required form-control" })
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="thinbox">
            <div class="th_thinbox">
                <p>Salary Earning (Present)</p>
            </div>
            @using (Html.BeginForm("CreateEdit", "EmployeeSalaryOtherIncreament", FormMethod.Post, new { @Id = "frmEmployeeSalaryStructure" }))
            {
                @Html.HiddenFor(model => model.EmployeeOtherEarningVM.Id)
                @Html.HiddenFor(model => model.EmployeeOtherEarningVM.EmployeeId)
                <div class="row present">
                    @foreach (var item in Model.EmployeeSalaryStructureVMs)
                    { 
                   
                        <div class="editor-label col-md-6">
                            <h3>@Html.ValueFor(model => item.SalaryType)</h3>
                        </div>
                        <div class="editor-field col-md-6">
                            @Html.HiddenFor(model => item.SalaryType)
                            @Html.TextBoxFor(model => item.TotalValue, new { @placeholder = "TotalValue", @class = " required salaryvalue form-control" })
                        </div>
                    }


                </div>
                <p>
                    @*<button type="button" title="Save Data" class="sym-btn-save">&nbsp;Save</button>*@
                    <button type="button" name="btnName" value="Save" title="Save Data" onclick="pageSubmit('frmEmployeeSalaryStructure')" class="sym-btn-save">&nbsp;Save</button>
                    <button type="button" title="Cancel Data" onclick="CancleLeave();" class="  sym-btn-cancel">&nbsp;Cancel</button>
                </p>
            }
        </div>
    </div>
    <div class="col-md-4">
        <div class="thinbox">
            <div class="th_thinbox">
                <p>Salary Earning(Future)</p>
            </div>
            <div class="row future">
                @foreach (var item in Model.EmployeeSalaryStructureVMs)
                { 
                   
                    <div class="editor-label col-md-6">
                        <h3>@Html.ValueFor(model => item.SalaryType)</h3>
                    </div>
                    <div class="editor-field col-md-6">
                        @Html.TextBoxFor(model => item.TotalValue, new { @disabled = "disabled", @placeholder = "TotalValue", @class = "salaryvalue required form-control" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $(".salaryvalue").val(0);
    })
</script>
