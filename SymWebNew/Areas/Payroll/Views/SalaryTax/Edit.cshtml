    </div> 
<script>
    $(function () {
        SelectAllForDelete();
        $(function () {
            var oTable = $('#myDataTable').dataTable({
                "bServerSide": true,
                "sAjaxSource": "/Payroll/SalaryTax/_salaryTaxDetails?fid=@ViewBag.Id",
                "bProcessing": true,
                "aLengthMenu": tablelength(),
                "bJqueryUI": true,
                "bAutoWidth": false,
                "aoColumns": [

                                 {
                                     "sName": "Id",
                                     "bSearchable": false,
                                     "bSortable": false,
                                     "sWidth": "12%",
                                     "sClass": "center",
                                     "fnRender": function (oObj) {
                                         return ' <input onclick="CheckAll(this)" type="checkbox" data-Id="' + oObj.aData[0] + '">&nbsp; <a title="Click on for Edit" id="lnkEdit1" style="text-decoration:none;" Onclick="TaxEdit(this);"  class=" sym-btn-edit-row"  data-Id="' + oObj.aData[0] + '"></a>' +
                                             '&nbsp; <a title="Click on for Delete" style="text-decoration:none;" data-url="/Payroll/SalaryTax/SalaryTaxDetailsDelete" onclick="deletedData(this, myDataTable,' + oObj.aData[0] + ');"  class="sym-btn-remove-row"></a>';

                                         //'&nbsp; <a title="Click on for Edit" style="text-decoration:none;" data-url="/Payroll/Loan/LoanDelete" onclick="deletedData(this, myDataTable,' + oObj.aData[0] + ');"  class="sym-btn-row-remove"></a>';
                                     }
                                 }
                                , { "sName": "Code", "sWidth": "12%" }
                                , { "sName": "Name", "sWidth": "15%" }
                                , { "sName": "Basic", "sClass": "right", "sWidth": "20%" }
                                , { "sName": "Gross", "sClass": "right", "sWidth": "20%" }
                                , { "sName": "Tax",   "sClass": "right", "sWidth": "20%" }
                              ]
               
            });
            oTable.columnFilter({
                sPlaceHolder: "head:after",
                aoColumns: [{ type: "checkbox", "sClass": "chkAll" }
                           , { type: "text" }
                           , { type: "text" }
                            , { type: "number-range" }
                           , { type: "number-range" }
                            , { type: "number-range" }
                           //, { type: "text" }
                           //, { type: "text" }
                           //, { type: "date-range" }

                ]

            });
        });
    });
    function TaxEdit(sender) {
        window.location = "/Payroll/SalaryTax/SingleTaxEdit?taxDetailsId=" + $(sender).attr('data-Id');
    }
</script>
