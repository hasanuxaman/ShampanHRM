    });
    function Edit() {
        fnReadOnly("frmGLAccount");
        if ($(".GLAccount").hasClass("readOnly")) {
            $(".Save").hide();
            $(".Edit").show();
        }
        else {
            $(".Save").show();
            $(".Edit").hide();
        }
    }

