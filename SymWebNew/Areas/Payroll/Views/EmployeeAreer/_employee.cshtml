@model IEnumerable<SymViewModel.HRM.EmployeeInfoVM>
@{
    ViewBag.Title = "Employee List";
    ViewBag.Location = "Employee List"; 
}
<!-- #region Script -->
@section head{
    <script  type="text/javascript">
        $(document).ready(function () {
            SelectAllForDelete();
            $.datepicker.regional[""].dateFormat = 'dd/M/y';
            $.datepicker.setDefaults($.datepicker.regional['']);
            var oTable = $('#myDataTable').dataTable({
                "bServerSide": true,
                "sAjaxSource": "/Payroll/EmployeeAreer/_EmployeeInfoForAreer",
                "bProcessing": true,
                "aLengthMenu": tablelength(),
                "bJqueryUI": true,
                "bAutoWidth": false,
                "aoColumns": [
                                {
                                    "sName": "Id",
                                    "bSearchable": false,
                                    "bSortable": false,
                                    "sWidth": "12%",
                                    "sClass": "center",
                                    "fnRender": function (oObj) {
                                        return '   <a  title="Click for Entry" style="text-decoration:none;"   href=\"/Payroll/EmployeeAreer/Create/?empId=' + oObj.aData[0] + '\" class="btn btn-warning btn-xs "><i class="fa fa-check-square-o"></i></a>' //+;
                                    }
                                }
                                , { "sName": "Code", "sWidth": "15%" }
                                , { "sName": "EmpName", "sWidth": "20%" }
                                , { "sName": "Department", "sWidth": "17%" }
                                , { "sName": "Designation", "sWidth": "17%" }
                                , { "sName": "JoinDate", "sWidth": "17%" }
                ]
            });
            oTable.columnFilter({
                sPlaceHolder: "head:after",
                aoColumns: [{ type: "checkbox", "sClass": "chkAll" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "date-range" }
                ]
            });
        });
    </script>

}
<!-- #endregion Script -->


