    ViewBag.Title = "Sage Integration Index";
}

<div class="headrow">
    <button type="button" title="Add New Journal Ledger" data-url="/Payroll/SalaryProcess/SageIntegration" onclick="GoTo(this)" id="" class="sym-btn-add ">&nbsp;New</button>
