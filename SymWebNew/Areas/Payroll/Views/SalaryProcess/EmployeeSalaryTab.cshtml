                               , { "sName": "Basic" , "sClass":"right" , "sWidth": "24%" }
                               , { "sName": "Gross" , "sClass":"right" , "sWidth": "24%" }
                               , { "sName": "Tax"   , "sClass":"right" , "sWidth": "24%" }
            ]
        });
        oTable2.columnFilter({
            sPlaceHolder: "head:after",
            aoColumns:
                [
                    { type: "checkbox", "sClass": "chkAll" }
                    , { type: "text" }
                    , { type: "number-range" }
                    , { type: "number-range" }
                    , { type: "number-range" }
                ]
        });


