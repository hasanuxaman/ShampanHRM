 
  
        @try
        {
            SymOrdinary.ShampanIdentity Identity = (SymOrdinary.ShampanIdentity)System.Threading.Thread.CurrentPrincipal.Identity;
            if (Identity.IsAdmin || Identity.IsPayroll)
            {
                Layout = "~/Areas/Payroll/Views/Shared/_HomeLayout.cshtml";


            }
            else if (Identity.Name == "PayrollAdmin")
            {
                Layout = "~/Areas/Payroll/Views/Shared/_HomeLayout.cshtml";
            }
            else
            {
                Layout = "~/Areas/Common/Views/Shared/_AuthorizationLayout.cshtml";
              
            }
        
        }
        catch (Exception)
        {
            Layout = "~/Areas/Common/Views/Shared/_AuthorizationLayout.cshtml";

        }
        

