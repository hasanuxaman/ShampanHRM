<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        SelectAllForDelete();
        $.datepicker.regional[""].dateFormat = 'dd/M/y';
        $.datepicker.setDefaults($.datepicker.regional['']);
        var oTable = $('#myDataTable').dataTable({
            "bServerSide": true,
            "sAjaxSource": "/@ViewBag.TransType/COA/_index",
            "bProcessing": true,
            "aLengthMenu": tablelength(),
            "bJqueryUI": true,
            "bAutoWidth": false,
            "aoColumns": [
                            {
                                "sName": "Id",
                                "bSearchable": false,
                                "bSortable": false,
                                "sWidth": "10%",
                                "sClass": "center",
                                "fnRender": function (oObj) {
                                    return ' <a id=""  title="Click on for Edit"  style="text-decoration:none;"  href=\"/@ViewBag.TransType/COA/Edit/' + oObj.aData[0] + '\" class="  sym-btn-edit-row"></a>' +
                                   ' ';
                                }
                            }
                            , { "sCode": "Code ", "sWidth": "10%" }
                            , { "sName": "Name ", "sWidth": "15%" }
                            , { "sGroupName": "GroupName ", "sWidth": "15%" }
                            , { "sCOAType": "COAType ", "sWidth": "10%" }
                            , { "sNature": "Nature ", "sWidth": "10%" }
                            , { "sIsRetainedEarning": "IsRetainedEarning ", "sWidth": "10%" }
                            , { "sIsNetProfit": "IsNetProfit ", "sWidth": "10%" }
                            , { "sIsDepreciation": "IsDepreciation ", "sWidth": "10%" }
                            , { "sCOASL": "COASL ", "sWidth": "5%" }
                            , { "sIsActive": "IsActive", "sWidth": "5%" }
            ]
        });
    });
</script>

