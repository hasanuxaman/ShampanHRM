<script>
    $(function () {
        var backgroundColor = [
                           "#2ecc71",
                           "#3498db",
                           "#95a5a6",
                           "#9b59b6",
                           "#f1c40f",
                           "#e74c3c",
                           "#34495e"
        ];

        setTimeout(function () { loadsMultiple() }, 0);
        setTimeout(function () { loadsPie() },0 );
        setTimeout(function () { loadsbar() }, 0);
        function loadsPie() {
            var labels = [];
            var datas = [];
            $.ajax({
                url: "@Url.Action("TotalEmployeeGender","Home",  new { area="HRM"})",
                type: 'GET',
                beforeSend: function () { $(".loading").show(); },
                complete: function () { $(".loading").fadeOut(200).hide("slow") },
                success: function (data) {
                    //data= JSON.stringify(data);
                    //alert(JSON.stringify(data));


                    $.each(data, function (index, value) {
                        labels.push(value.Gender + '-' + value.Person);
                        datas.push(value.Person);
                    });
      var ctx = document.getElementById("myChartPie").getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: labels,
                    datasets: [{
                        backgroundColor: backgroundColor,
                        data: datas
                    }],
                }
            });
                },
            });
        }
        function loadsbar() {
            var labels = [];
            var datas = [];
            $.ajax({
                url: "@Url.Action("TotalEmployeeGender","Home",  new { area="HRM"})",
                type: 'GET',
                beforeSend: function () { $(".loading").show(); },
                complete: function () { $(".loading").fadeOut(200).hide("slow") },
                success: function (data) {
                    //data= JSON.stringify(data);
                    //alert(JSON.stringify(data));

                    $.each(data, function (index, value) {
                        labels.push(value.Gender + '-' + value.Person);
                        datas.push(value.Person);
                    });
                    var ctx = document.getElementById("myChartBar").getContext('2d');
                    var myChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: labels,
                            datasets: [{
                                label: 'Gender',
                                data: datas,
                                backgroundColor: backgroundColor
                            }]
                        }
                    });
                },
            });
            
        }
        function loadsMultiple() {
            var section = [];
            var Genders = [];
            var labels = [];
            var vpersons = [];
            var datamulti = [];
            $.ajax({
                url: "@Url.Action("SectionGenderPerson","Home",  new { area="HRM"})",
                type: 'GET',
                beforeSend: function () { $(".loading").show(); },
                complete: function () { $(".loading").fadeOut(200).hide("slow") },
                success: function (data) {
                    $.each(data[0], function (index, value) {
                        section.push(value);
                    });
                    $.each(data[2], function (index, value) {
                        //alert(JSON.stringify(value));
                            datamulti.push(
                             {
                                 label: value.Gender,
                                 data: value.Persons,
                                 backgroundColor: backgroundColor[index]
                             }
                            )
                    });

                    var ctx = document.getElementById("myChartBarMultiple").getContext('2d');
                    var myChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: section,
                            datasets: datamulti
                        }
                    });
                 
                },
            });
        }
			});
		</script>
<div class="container col-md-4 ">
  <h2 class="card-header ">Total Male and Female</h2>
  <div  class="card-block" >
    <canvas id="myChartPie" height="20" width="20"></canvas>
  </div>
</div>
<div class="container col-md-4 " >
