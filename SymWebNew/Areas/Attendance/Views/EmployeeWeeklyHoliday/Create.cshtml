    $(function () {
        $(".selectDropdown").select2();
        $(".selectDropdown").trigger('change');
        $(".selectDropdown").removeClass('form-control');
        InitDropDowns();
        InitDateTimePickers();

        //InitDropdownsCommon();

        valiDation("frmEmployeeWeeklyHoliday");
    });

</script>
