@model IEnumerable<SymViewModel.Tax.TaxDepositVM>
@using UIHelper.MVC
@using (Html.BeginForm("CreateTaxDeposit", "TaxDeposit", FormMethod.Post, new { @Id = "frmEmloyeeTAXDeposit" }))
{


    <div class="thinbox">
        <div class="th_thinbox">
            <p>
                Employee List
            </p>
        </div>

        <div id="container">
            <table id="myDataTable" class="display  table-responsive ">
                <thead>
                    <tr>
                        <th style="  text-align: center; width: 8%;  ">
                            Select All
                            <input type="checkbox" class="chkAll" />
                        </th>
                        <th style="width: 8%;">Code</th>
                        <th style="width: 20%;">Name</th>
                        <th style="width: 10%;">DepositAmount</th>
                        <th style="width: 10%;">FiscalYearId</th>
                        <th style="width: 10%;">Year</th>
                        <th style="width: 10%;">FiscalYearDetailId</th>
                        <th style="width: 10%;">PeriodName</th>

                    </tr>
                </thead>

                <tbody>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        <tr>
                            <th style="text-align: center">@Html.CheckBoxFor(model => Model.ToList()[i].IsEmployeeChecked, new { @class = " selectChk " })</th>
                            <th>@Html.DisplayFor(model => Model.ToList()[i].EmployeeCode)</th>
                            <th>@Html.DisplayFor(model => Model.ToList()[i].EmployeeName)</th>
                            <th>@Html.DisplayFor(model => Model.ToList()[i].DepositAmount)</th>
                            <th>@Html.DisplayFor(model => Model.ToList()[i].FiscalYearId)</th>
                            <th>@Html.DisplayFor(model => Model.ToList()[i].Year)</th>
                            <th>@Html.DisplayFor(model => Model.ToList()[i].FiscalYearDetailId)</th>
                            <th>@Html.DisplayFor(model => Model.ToList()[i].PeriodName)</th>

                            @Html.HiddenFor(model => Model.ToList()[i].EmployeeId)
                            @Html.HiddenFor(model => Model.ToList()[i].EmployeeCode)
                            @Html.HiddenFor(model => Model.ToList()[i].EmployeeName)
                            @Html.HiddenFor(model => Model.ToList()[i].DepositAmount)
                            @Html.HiddenFor(model => Model.ToList()[i].FiscalYearId)
                            @Html.HiddenFor(model => Model.ToList()[i].Year)
                            @Html.HiddenFor(model => Model.ToList()[i].FiscalYearDetailId)
                            @Html.HiddenFor(model => Model.ToList()[i].PeriodName)
                        </tr>
                    }
                    <tr>
                        <td colspan="2">&nbsp;Total Records: @Model.Count()</td>
                        <td colspan="9"></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <br />
    </div>
}

<script>
    $(function () {
        SelectAllForDelete()
    });

</script>
<style>
    @* table, td, th, tr {
        border: 1px solid black;
        border-collapse: collapse;
        background-color: white;
    }

