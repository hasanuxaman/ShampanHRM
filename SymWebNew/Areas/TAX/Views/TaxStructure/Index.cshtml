@{
    ViewBag.Title = "Index";
}
    <script type="text/javascript">
        $(document).ready(function () {
            SelectAllForDelete();
            $.datepicker.regional[""].dateFormat = 'dd/M/y';
            $.datepicker.setDefaults($.datepicker.regional['']);
            var oTable = $('#myDataTable').dataTable({
                "bServerSide": true,
                "sAjaxSource": "/TAX/TaxStructure/_index",
                "bProcessing": true,
                "aLengthMenu": tablelength(),
                "bJqueryUI": true,
                "bAutoWidth": false,
                "aoColumns": [
                                {
                                    "sName": "Id",
                                    "bSearchable": false,
                                    "bSortable": false,
                                    "sWidth": "12%",
                                    "sClass": "center",
                                    "fnRender": function (oObj) {
                                        return '<a title="Click on for Delete" style="text-decoration:none;" data-url="/TAX/TaxStructure/Details" onclick="GoTo(this)"  class="sym-btn-detail-row"></a>';
                                    }
                                }
                                , { "sName": "Code" }
                                , { "sName": "Name" }
                                , { "sName": "TaxValue" }
                                , { "sName": "IsFixed" }
                                , { "sName": "PortionSalaryType" }
                                , { "sName": "Remarks" }
                ]
            });
            oTable.columnFilter({
                sPlaceHolder: "head:after",
                aoColumns: [{ type: "checkbox", "sClass": "chkAll" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                           , { type: "text" }
                ]
            });
        });
    </script>
<div class="headrow">
    <button type="button" title="Add New Tax Structure" data-url="/TAX/TaxStructure/Create" id="" class="btnCreate sym-btn-add ">&nbsp;New</button>
    <button type="button" title="Delete Tax Structure" data-url="/TAX/TaxStructure/Delete" onclick="deletedData(this, 'myDataTable');" id="" class="sym-btn-remove">&nbsp;Delete</button>
    <label class="pull-right">Tax Structure</label>
</div>
<div class="thinbox">
    <div class="th_thinbox">
        <p>Tax Structure List</p>
    </div>
    <p></p>
