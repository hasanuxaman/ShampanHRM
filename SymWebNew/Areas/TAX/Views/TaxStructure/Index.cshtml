        <div id="container">
            <div id="demo">
                <table id="myDataTable" class="display">
                    <thead>
                        <tr>
                            <th class="center">
                                <input type="checkbox" class="chkAll" />Select All</th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Tax Value</th>
                            <th>Fixed/Rate</th>
                            <th>Portion Salary Type</th>
                            <th>Remarks</th>
                        </tr>
                        <tr>
                            <th class="center">Actions</th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Tax Value</th>
                            <th>Fixed/Rate</th>
                            <th>Portion Salary Type</th>
                            <th>Remarks</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="headrow">
    <button type="button" title="Add New Tax Structure" data-url="/TAX/TaxStructure/Create" id="" class="btnCreate sym-btn-add ">&nbsp;New</button>
